<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h1>Utilizatori</h1>
    </div>

    <div class="col-sm-6 text-end">
      <%= link_to new_user_invitation_path, class: 'btn btn-primary' do %>
        Invită un utilizator
      <% end %>
    </div>
  </div>

  <div class="table-responsive mt-4 text-center bg-white">
    <table class="table table-striped table-bordered table-hover bg-white">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Rol</th>
          <th>Status</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% next if user.admin? %>
          <%= content_tag :tr, id: dom_id(user), class: dom_class(user) do %>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= t("users.roles.#{user.role}") %></td>
            <td><%= t("users.status.#{user.status}") %></td>
            <td><%= link_to 'Arată detalii', user %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
