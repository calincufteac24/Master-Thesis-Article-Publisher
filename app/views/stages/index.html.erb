<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <h1>Stagii articole</h1>
    </div>

    <div class="col-sm-6 text-end">
    <%= link_to new_stage_path, class: 'btn btn-primary' do %>
      Adaugă un stagiu
    <% end %>
    </div>
  </div>

  <div class="table-responsive mt-4">
    <table class="table table-striped table-bordered table-hover bg-white">
      <thead>
        <tr>
          <th>Name</th>
          <th>Descriere</th>
          <th>Despre</th>
          <th>Poziție</th>
        </tr>
      </thead>

      <tbody>
        <% @stages.sort_by(&:position).each do |stage| %>
          <%= content_tag :tr, id: dom_id(stage), class: dom_class(stage) do %>
            <td><%= link_to stage.name, stage %></td>
            <td><%= stage.description %></td>
            <td><%= stage.about %></td>
            <td><%= stage.position %></td>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
