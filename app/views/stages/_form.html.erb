<%= form_with(model: stage, local: true) do |form| %>
  <% if stage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stage.errors.count, "error") %> prohibited this stage from being saved:</h2>

      <ul>
      <% stage.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :about, class: 'form-label' %>
      <%= form.text_area :about, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :position, class: 'form-label' %>
      <%= form.number_field :position, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if stage.persisted? %>
      <div class="float-end">
        <%= link_to I18n.t('button.destroy'), stage, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if stage.persisted? %>
      <%= link_to I18n.t('button.cancel'), stage, class: "btn btn-link" %>
    <% else %>
      <%= link_to I18n.t('button.cancel'), stages_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
