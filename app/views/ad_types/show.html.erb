<div class="container card bg-white p-3">
  <div class="page-header my-3">
    <%= link_to ad_types_path, class: 'btn btn-default' do %>
      Toate tipurile
    <% end %>
    <%= link_to edit_ad_type_path(@ad_type), class: 'btn btn-primary' do %>
      Edit
    <% end %>
    <h1>Detalii tip articol/anunț</h1>
  </div>

  <dl class="dl-horizontal">
    <dt>Name:</dt>
    <dd><%= @ad_type.name %></dd>
    <dt>Categorie:</dt>
    <dd><%= @ad_type.category&.name %></dd>
    <dt>Descriere:</dt>
    <dd><%= @ad_type.description %></dd>
    <dt>Despre:</dt>
    <dd><%= @ad_type.about %></dd>
  </dl>

  Campuri anunt
  <div class="accordion" id="accordionExample">
    <% @ad_type.ad_type_fields.each do |field| %>
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingOne">
          <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne_<%= field.id %>" aria-expanded="true" aria-controls="collapseOne_<%= field.id %>">
            <%= field.name %> #<%= field.position %>
          </button>
        </h2>
        <div id="collapseOne_<%= field.id %>" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
          <div class="accordion-body">
            Text ajutator: <%= field.help_text %><br>
            Obligatoriu? <%= field.required %><br>

            <hr>
            <strong><%= field.text_before %></strong> <i><%= field.form_field_type %>  <%= field.option_values.join(' ') %> </i> <%= field.text_after %>
            <%= link_to 'Editează Câmp', edit_ad_type_ad_type_field_path(@ad_type, field), class: 'btn btn-outline-primary w-auto ms-5' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to 'Adaugă Câmp', new_ad_type_ad_type_field_path(@ad_type), class: 'btn btn-outline-primary w-50 mx-auto mt-5' %>
</div>
