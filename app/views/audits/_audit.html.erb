<div class="card-body mt-2">
  <div class="row">
    <div class="col-lg-4 col-12">
      <div class="p-2 bg-light" style="height: 100px">
        <label class="mb-2 font-weight-bold"> <%= t('audits.header_columns.performed_by') %> </label>
        <div>
          <%= user_avatar(audit.user, size: 28, class: 'user-avatar') %>
          <span class="align-middle"><%= audit.user.name if audit.user.present? %></span>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-12">
      <div class="p-2 bg-light" style="height: 100px">
        <label class="mb-2 font-weight-bold"><%= t('audits.header_columns.action') %> </label>
        <div>
          <%= t(audit.action, scope: [:audits, :action_types]) %> -  <%= t(audit.auditable_type, scope: [:audits, :entity_types]) %>
        </div>
      </div>
    </div>

    <div class="col-lg-4 col-12">
      <div class="p-2 bg-light" style="height: 100px">
        <label class="mb-2 font-weight-bold"> <%= t('event_case_updates.header_columns.created_at') %> </label>
        <div>
          <%= audit.created_at.strftime('%H:%M %D') %>
        </div>
      </div>
    </div>
  </div>
</div>
    <hr>
<div class="card-body">
  <div class="row mt-3">
    <% if defined?(audit.audited_changes) %>
      <% audit.audited_changes.each do |key, value| %>
        <% unless value.nil? || value == '' %>
          <div class="col-lg-6 col-12">
            <%= display_audit_changes(key, value) %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
